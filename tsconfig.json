{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,
		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"baseUrl": ".",
		"paths": {
			"@api": ["src/api/index.ts"],
			"@assets": ["src/assets/index.ts"],
			"@atoms": ["src/components/atoms/index.ts"],
			"@layouts": ["src/components/layouts/index.ts"],
			"@molecules": ["src/components/molecules/index.ts"],
			"@organisms": ["src/components/organisms/index.ts"],
			"@constants": ["src/constants/index.ts"],
			"@helpers": ["src/helpers/index.ts"],
			"@hooks": ["src/hooks/index.ts"],
			"@interfaces": ["src/interfaces/index.ts"],
			"@pages": ["src/pages/index.ts"],
			"@router": ["src/router/index.ts"],
			"@styles/*": ["src/styles/"],
			"@RTK/store": ["src/store/index.ts"],
			"@RTK/middlewares": ["src/store/middlewares/index.ts"],
			"@RTK/slices": ["src/store/slices/index.ts"],
			"@RTK/thunks": ["src/store/thunks/index.ts"],
			"@utils": ["src/utils/index.ts"]
		}
	},
	"include": ["src"],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
